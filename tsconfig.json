{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "node_modules/expo-router/**/*.d.ts"
  ],
  "types": [
    "expo-router",
    "react",
    "react-native"
  ]
}
